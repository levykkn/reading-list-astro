---

import '../styles/global.css';
import Header from '../components/Header.astro';

export interface Props {
	title: string;
    layout?: 'centered' | 'full';
}

const { title, layout = 'centered' } = Astro.props;
---

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style is:global>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #F9FAFB; 
        color: #374151;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>
</head>
<body class="antialiased">
    <Header />
    <main 
        class:list={[
            "w-full py-8 sm:py-12",
            layout === 'centered' ? 'max-w-6xl mx-auto px-4 sm:px-6 lg:px-8' : 'px-4 sm:px-6 lg:px-8'
        ]}
    >
        <slot />
    </main>
    
    <footer class="text-center mt-25 text-sm text-gray-400">
        <p>&copy; 2025 Reading Lists</p>
    </footer>

</body>
</html>
